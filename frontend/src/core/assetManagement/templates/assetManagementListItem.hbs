<!-- Deleted icon -->
{{#if _isDeleted}}
  <div class="asset-management-list-item-deleted">
      <i class="fa fa-ban"></i>
  </div>
{{/if}}

<!-- Button overlay -->
{{#if isModal}}
<div class="asset-management-list-item-editOverlay">
  <div class="button-container">
    <span class="tooltip">Select</span>
    <button class="asset-management-list-item-select">
      <i class="fa fa-check"></i>
    </button>
  </div>
  {{#if canAutofill}}
  <div class="button-container">
    <span class="tooltip">Autofill</span>
    <button class="asset-management-list-item-autofill">
      <i class="fa fa-magic"></i>
    </button>
  </div>
  {{/if}}
</div>
{{/if}}

<div class="asset-management-list-item-inner">

    <!-- Icon -->
    <div class="asset-management-list-item-icon">
      <div class="asset-management-list-item-icon-inner">
        {{#ifValueEquals assetType "image"}}
          <i class="fa fa-file-image-o"></i>
        {{/ifValueEquals}}
        {{#ifValueEquals assetType "audio"}}
          <i class="fa fa-file-audio-o"></i>
        {{/ifValueEquals}}
        {{#ifValueEquals assetType "video"}}
          <i class="fa fa-file-video-o"></i>
        {{/ifValueEquals}}
        {{#ifValueEquals assetType "other"}}
          <i class="fa fa-file-o"></i>
        {{/ifValueEquals}}
      </div>
    </div>

    <!-- Thumbnail -->
    {{#ifValueEquals assetType "image"}}
      {{#if metadata}}
        <div class="asset-management-list-item-content" data-style="background-image:url(api/asset/thumb/{{_id}}{{cacheBuster this}})">
      {{else}}
        <div class="asset-management-list-item-content">
            <i class="fa fa-file-image-o"></i>
        </div>
      {{/if}}
    </div>
    {{/ifValueEquals}}
    {{#ifValueEquals assetType "video"}}
      {{#if metadata}}
        <div class="asset-management-list-item-content" data-style="background-image:url(api/asset/thumb/{{_id}})"}>
      {{else}}
        <div class="asset-management-list-item-content">
            <i class="fa fa-file-video-o"></i>
        </div>
      {{/if}}
    </div>
    {{/ifValueEquals}}
    {{#ifValueEquals assetType "audio"}}
      <div class="asset-management-list-item-content">
          <i class="fa fa-file-audio-o"></i>
      </div>
    {{/ifValueEquals}}
    {{#ifValueEquals assetType "other"}}
      <div class="asset-management-list-item-content">
          <i class="fa fa-file-o"></i>
      </div>
    {{/ifValueEquals}}

    <!-- Details -->
    <div class="asset-management-list-item-details">
        <div class="asset-management-list-item-details-inner">
          <div class="asset-management-list-item-title">
              <h4 class="asset-management-list-item-title-inner">{{{title}}}</h4>
          </div>
        </div>
    </div>
</div>
