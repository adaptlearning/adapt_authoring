<div class="asset-management-new-asset-inner inner">
    <!-- Begin upload form -->
    <form class="asset-form forms asset-form" action="/api/asset" method="post">
        <div class="form-group">
            <label for="file">
                {{t 'app.assetfile'}} <span class="req">*</span>
                <span class="error"></span>
            </label>
            {{#if path}}
            <div class="asset-management-new-asset-file">
                File has been uploaded
            </div>
            {{else}}
            <input type="file" class="asset-file" name="file">
            <div class="progress-container">
                <div class="progress-bar">
                    <div class="progress-percent">0%</div>
                </div>
            </div>
            {{/if}}
        </div>
        <div class="form-group">
            <label for="title">
                {{t 'app.assettitle'}} <span class="req">*</span>
                <span class="error"></span>
            </label>
            <input type="text" class="asset-title required" name="title" placeholder="{{t 'app.assettitle'}}" value="{{ title }}" autocomplete="off">
        </div>

        <div class="form-group">
            <label for="description">
                {{t 'app.assetdescription'}} <span class="req">*</span>
                <span class="error"></span>
            </label>
            <textarea class="asset-description required" name="description" placeholder="{{t 'app.assetdescription'}}">{{ description }}</textarea>
        </div>

        <div class="form-group tags">
            <label for="tags">{{t 'app.tags'}}</label>
            <input type="text" autocomplete="off" class="width-30" id="tags_control" name="tags_control" value="{{pickCSV tags "title"}}" />
        </div>
        <input type="hidden" name="tags" id="tags" />

        {{#if projects}}
        <div class="form-group workspace">
            <a class="workspaces" href="#"><i class="fa fa-link"></i> link asset to existing courses</a>
            <div class="courses">
              {{#each projects}}
              <div class="course input checkbox">
                {{console ../workspaces.course}}
                <input type="checkbox" id="{{_id}}" {{#ifListContains ../workspaces.course _id}}checked{{/ifListContains}}/>
                <div class="icon">
                  <i class="icon-checked fa fa-check-square-o"></i>
                  <i class="icon-unchecked fa fa-square-o"></i>
                </div>
                <label for="{{_id}}">{{title}}</label>
              </div>
              {{/each}}
            </div>
        </div>
        {{/if}}
    </form>
    <!-- end upload form -->
</div>
