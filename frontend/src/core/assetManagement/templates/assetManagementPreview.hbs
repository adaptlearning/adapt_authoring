<button class="close"><i class="fa fa-times-circle"></i></button>

<div class="asset-preview-details text-centered">
  <!-- Header -->
  <div class="asset-preview-details-header">
    Asset details
  </div>

  <!-- Preview content -->
  <div class="asset-preview-details-preview">
    {{#ifValueEquals assetType "image"}}
      <img src="api/asset/serve/{{_id}}{{cacheBuster this}}"/>
    {{/ifValueEquals}}

    {{#ifValueEquals assetType "video"}}
      <video preload="none" width="640px" height="360px" poster="" style="width:100%; height:100%;">
        <source src="api/asset/serve/{{_id}}" type="{{mimeType}}"/>
      </video>
    {{/ifValueEquals}}

    {{#ifValueEquals assetType "audio"}}
      <i class="fa fa-file-audio-o"></i>
      <audio src="api/asset/serve/{{_id}}" type="{{mimeType}}" controls="controls" style="width:100%;"></audio>
    {{/ifValueEquals}}

    {{#ifValueEquals assetType "other"}}
      <i class="fa fa-file-o"></i>
    {{/ifValueEquals}}
  </div>

  <!-- Details text -->
  <div class="asset-preview-details-text">
    <div class="asset-preview-title">{{title}}</div>
    {{#if description}}
    <div class="asset-preview-description">{{description}}</div>
    {{/if}}

    <!-- Asset metadata -->
    <div class="asset-group">
      {{#if metadata.duration}}
        <div class="asset-duration break">{{{formatDuration metadata.duration}}}</div>
      {{/if}}
      {{#if metadata.height}}
        <div class="asset-height">{{{metadata.width}}}px x {{{metadata.height}}}px</div>
      {{/if}}
      <div class="asset-size">{{{bytesToSize size}}}</div>
    </div>
    {{#if tags.length}}
    <div class="asset-group">
      <div class="label">Tags:</div>
      <div class="asset-tags">
        {{{renderTags tags "title"}}}
      </div>
    </div>
    {{/if}}

    <div class="asset-preview-date">Uploaded on {{momentFormat createdAt "DD/MM/YY"}}{{#ifHasPermissions "{{tenantid}}/user:read"}} <span class="label">by</span> {{getUserNameFromId createdBy}}{{/ifHasPermissions}}.</div>

    <!-- Buttons -->
    {{#if isSelectable}}
      <div class="asset-group">
       <a href="#" class="btn primary confirm-select-asset">Select</a>
      </div>
    {{/if}}
    <div class="asset-preview-edit asset-group">
      {{#if _isDeleted}}
        <button class="asset-preview-restore-button btn alert">{{t 'app.restore'}}</button>
      {{else}}
        <button class="asset-preview-edit-button btn primary">{{t 'app.edit'}}</button>
        {{#ifHasPermissions "{{tenantid}}/asset/*:delete"}}
        <button class="asset-preview-delete-button btn alert">{{t 'app.delete'}}</button>
        {{/ifHasPermissions}}
      {{/if}}
    </div>
  </div>

</div>
