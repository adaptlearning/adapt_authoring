<form class="forms">
  <label for="projectDetailTitle">{{t 'app.projecttitle'}} <span class="req">*</span>
    <input type="text" class="width-30" id="projectDetailTitle" placeholder="{{t 'app.projecttitle'}}" value="{{ title }}">
  </label>
  <label for="projectDetailDescription">{{t 'app.projectdescription'}}
    <textarea class="width-30" id="projectDetailDescription" placeholder="{{t 'app.projectdescription'}}">{{ body }}</textarea>
  </label>
  <button id="saveButton" type="submit" class="btn btn-green">{{t 'app.save'}}</button>
  <button id="cancelButton" type="button" class="btn">{{t 'app.cancel'}}</button>
</form>
