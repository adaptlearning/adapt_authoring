<div class="course-edit">
  <div class="row">
    <form role="form">
      <div class="form-group">
        <label for="course-title">Course Title</label>
        <input type="text" class="form-control course-title" placeholder="Course Title" value="{{title}}">
      </div>
      <div class="form-group">
        <label for="Course-body">Course Body</label>
        <textarea class="form-control course-body" placeholder="Course Body">{{body}}</textarea>
      </div>
      <div class="form-group">
        <label for="course-submit">Submit Button Text</label>
        <input type="text" class="form-control course-submit" value="{{submit}}">
      </div>
      <div class="form-group">
        <label for="course-reset">Reset Button Text</label>
        <input type="text" class="form-control course-reset" value="{{reset}}">
      </div>
      <div class="form-group">
        <label for="course-show-correct">Show Correct Answer Text</label>
        <input type="text" class="form-control course-show-correct" value="{{showCorrectAnswer}}">
      </div>
      <div class="form-group">
        <label for="course-hide-correct">Hide Correct Answer Text</label>
        <input type="text" class="form-control course-hide-correct" value="{{hideCorrectAnswer}}">
      </div>
      <div class="hidden">
        <input type="hidden" value="{{id}}" id="courseId">
      </div>
      <button class="save-button" type="submit">{{t 'app.save'}}</button>
      <button class="cancel-button" type="button">{{t 'app.cancel'}}</button>
    </form>
  </div>
</div>
