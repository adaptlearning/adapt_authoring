{{>part_editorItemSidebar}}

<div class="page-article-detail">

    <h4 class="page-article-title">{{#if displayTitle}}{{{displayTitle}}}{{else}}{{t 'app.placeholdernewarticle'}}{{/if}}</h4>
    <div class="page-article-body">{{{body}}}</div>
    <div class="page-article-delete-icon"><a href="#" class="page-article-delete" title="{{ t 'app.clicktodelete'}}"><i class="fa fa-trash-o"></i></a></div>
    <div class="page-article-blocks"></div>

    <div class="add-control">
        <a href="#" class="btn add-block">{{t 'app.addblock'}}</a>
    </div>
</div>
