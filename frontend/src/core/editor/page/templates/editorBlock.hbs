{{>part_editorItemSidebar}}

<div class="block-detail">
  <h4 class="block-title">{{#if displayTitle}}{{{displayTitle}}}{{else}}{{t 'app.placeholdernewblock'}}{{/if}}</h4>
  <div class="block-body">{{{body}}}</div>
  <div class="block-delete-icon"><a href="#" class="block-delete" title="{{ t 'app.clicktodelete'}}"><i class="fa fa-trash-o"></i></a></div>
  <div class="page-article-components"></div>

  {{#if layoutOptions}}
    <div class="add-control">
      <a href="#" class="btn add-component">{{t 'app.addcomponent'}}</a>
    </div>
  {{/if}}

</div>
