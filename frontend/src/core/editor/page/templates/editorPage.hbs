<div class="page-inner">

    <div class="page-detail">

        <h4 class="page-name">
            <a href="#/editor/{{_courseId}}/page/{{_id}}/edit" class="page-edit-button" title="{{t 'app.clicktoedit'}}">
                <i class="fa fa-edit fa-fw"></i>
            </a>
            {{#if displayTitle}}
                {{{displayTitle}}}
            {{else}}
                {{title}}
            {{/if}}
        </h4>

        <div class="page-body">{{{body}}}</div>

    </div>

    <div class="page-articles"></div>

    <div class="add-control">
        <a href="#" class="btn add-article">{{t 'app.addarticle'}}</a>
    </div>

</div>
