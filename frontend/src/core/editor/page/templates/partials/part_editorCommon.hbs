<div class="sidebar-item-inner">
    <div class="sidebar-row sidebar-item-title">
        <h2 class="sidebar-item-title-inner">
            Global Settings
        </h2>
    </div>
    <div class="sidebar-row">
        <button class="editor-common-sidebar-project">
            <span class="editor-common-sidebar-project-inner">
                <i class="fa fa-cog"></i>{{ t 'app.projectsettings'}}
            </span>
        </button>
    </div>
    <div class="sidebar-row">
        <button class="editor-common-sidebar-config">
            <span class="editor-common-sidebar-config-inner">
                <i class="fa fa-cogs"></i>{{ t 'app.configurationsettings'}}
            </span>
        </button>
    </div>
    <div class="sidebar-row">
        <button class="editor-common-sidebar-select-theme">
            <span class="editor-common-sidebar-select-theme-inner">
                <i class="fa fa-image"></i>{{ t 'app.themepicker'}}
            </span>
        </button>
    </div>
    <div class="sidebar-row">
        <button class="editor-common-sidebar-menusettings">
            <span class="editor-common-sidebar-menusettings-inner">
                <i class="fa fa-sitemap"></i>{{ t 'app.menupicker'}}
            </span>
        </button>
    </div>
    <div class="sidebar-row">
        <button class="editor-common-sidebar-extensions">
            <span class="editor-common-sidebar-extensions-inner">
                <i class="fa fa-plug"></i>{{ t 'app.manageextensions'}}
            </span>
        </button>
    </div>
    <div class="sidebar-row">
        <button class="editor-common-sidebar-preview">
            <div class="editor-common-sidebar-preview-progress sidebar-progress"></div>
            <span class="editor-common-sidebar-preview-inner">
                <i class="fa fa-desktop"></i>{{ t 'app.preview'}}
            </span>
            <span class="editor-common-sidebar-previewing display-none">
                <i class="fa fa-circle-o-notch fa-spin"></i>{{ t 'app.previewing'}}
            </span>
        </button>
    </div>
    <div class="sidebar-row">
       <button class="editor-common-sidebar-download">
            <div class="editor-common-sidebar-downloading-progress sidebar-progress"></div>
            <span class="editor-common-sidebar-download-inner">
                <i class="fa fa-download"></i>{{ t 'app.download'}}
            </span>
            <span class="editor-common-sidebar-downloading display-none">
                <i class="fa fa-circle-o-notch fa-spin"></i>{{ t 'app.downloading'}}
            </span>
        </button>
    </div>
    <div class="sidebar-row">
        <button class="editor-common-sidebar-close">
            <span class="editor-common-sidebar-close-inner">
                <i class="fa fa-close"></i>Close
            </span>
        </button>
    </div>
    <form id="downloadForm" method="get" action="">
    </form>
</div>
