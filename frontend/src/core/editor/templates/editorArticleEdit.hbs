<div class="page-article-edit">
  <div class="row">
    <form role="form">
      <div class="form-group">
        <label for="article-title">Article Title</label>
        <input type="text" class="form-control article-title" placeholder="Article Title" value="{{title}}">
      </div>
      <div class="form-group">
        <label for="article-description">Article Description</label>
        <textarea class="form-control article-body" placeholder="Article Description">{{body}}</textarea>
      </div>
      <div class="form-group">
        <label for="article-parent">Parent</label>
        <select class="form-control article-parent">
          {{#each ancestors}}
          <option value="{{_id}}" {{selected ../_parentId _id}}>{{title}}</option>
          {{/each}}
        </select>
      </div>
      <div class="form-group">
        <label for="article-position">Position</label>
        <select class="form-control article-position">
          {{#counterFromOne 10}}
          <option value="{{this}}" {{selected _sortOrder}}>{{this}}</option>
          {{/counterFromOne}}
        </select>
      </div>
      <div class="hidden">
        <input type="hidden" value="{{ id }}" id="pageId">
      </div>
      <button class="save-button" type="submit">Save</button>
      <button class="cancel-button" type="button">Cancel</button>
    </form>
  </div>
</div>
