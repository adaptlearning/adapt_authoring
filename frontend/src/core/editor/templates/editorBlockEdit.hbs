<div class="row">
  <form role="form">
    <div class="form-group">
      <label for="block-title">Block Title</label>
      <input type="text" class="form-control block-title" placeholder="Block Title" value="{{title}}">
    </div>
    <div class="form-group">
      <label for="block-description">Block Description</label>
      <textarea class="form-control block-body" placeholder="Block Description">{{body}}</textarea>
    </div>
    <div class="form-group">
        <label for="block-parent">Parent</label>
        <select class="form-control block-parent">
          {{#each ancestors}}
          <option value="{{_id}}" {{selected ../_parentId _id}}>{{title}}</option>
          {{/each}}
        </select>
    </div>
    <div class="form-group">
        <label for="article-position">Position</label>
        <select class="form-control block-position">
          {{#counterFromOne 10}}
          <option value="{{this}}" {{selected this ../_sortOrder}}>{{this}}</option>
          {{/counterFromOne}}
        </select>
    </div>
    <div class="hidden">
      <input type="hidden" value="{{id}}" id="pageId">
    </div>
    <button class="save-button" type="submit">Save</button>
    <button class="cancel-button" type="button">Cancel</button>
  </form>
</div>
