<div class="navigation-inner clearfix">
{{#if _canRevert}}
<div class="navigation-left navigation-loginas-background">
{{else}}
<div class="navigation-left">
{{/if}}
    {{#if isAuthenticated}}
    <a href="#" class="navigation-item navigation-global-menu" data-event="globalMenu:toggle">
      {{!-- <i class="fa fa-bars"></i> --}}
      <div id="global-menu-icon">
        <span></span>
        <span></span>
        <span></span>
      </div>
    </a>
    <div href="#" class="navigation-item navigation-product-name">{{t 'app.productname'}}</div>
    <div class="navigation-item navigation-loading-indicator display-none">
      <i class="fa fa-circle-o-notch fa-spin"></i>
    </div>
    {{/if}}
  </div>
{{#if _canRevert}}
<div class="navigation-right navigation-loginas-background">
{{else}}
<div class="navigation-right">
{{/if}}
  {{#if _canRevert}}<button class="revert-loginas btn">Log back in as {{_revertLogin.email}}</button>{{/if}}
    {{#if isAuthenticated}}
    <a href="#" class="navigation-item navigation-help" data-event="help">
      <span>{{t 'app.help'}}</span>
    </a>
    <a href="#" class="navigation-item navigation-profile" data-event="user:profile">
      Signed in as: <span>{{email}}</span>
    </a>
    <a href="#" class="navigation-item navigation-user-logout btn white-hollow" data-event="user:logout">
      <span>{{t 'app.logout'}}</span>
    </a>
    {{/if}}
  </div>
</div>