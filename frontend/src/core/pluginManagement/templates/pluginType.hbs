<div class="pluginType-inner">
  <div class="pluginType-description col-row">
    <div class="pluginType-title col-20">
      <h4 class="pluginType-title-inner tb-col-inner">{{{displayName}}}</h4>
    </div>
    <div class="pluginType-description col-40">
      <div class="pluginType-description-inner tb-col-inner">{{{description}}}</div>
    </div>
    <div class="pluginType-version col-10 col-centered">
      <span class="pluginType-version-number tb-col-inner">{{version}}</span>
    </div>
    <div class="pluginType-enabled col-10 col-centered">
      <div class="pluginType-enabled-inner  tb-col-inner">
        <input class="plugin-toggle-enabled" type="checkbox" {{#if _isAvailableInEditor}} checked="checked" {{/if}} />
      </div>
    </div>
    <div class="pluginType-update col-20 col-centered">
      <div class="pluginType-update-inner tb-col-inner">
        {{#if isLocalPackage}}
        <em class="info">({{t 'app.uploadedbyuser'}})</em>
        {{else}}
        <button class="plugin-update-check btn btn-info">Check for updates</button>
        {{/if}}
      </div>
    </div>
  </div>
</div>
