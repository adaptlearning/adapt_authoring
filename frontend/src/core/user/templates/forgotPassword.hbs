<div class="login-logo">
  <img src="adaptbuilder/css/assets/adapt-learning-logo-white.png"/>
</div>

<div class="forgot-password-success display-none">
    {{t 'app.forgotpasswordsuccess'}}
    <br />
    <br />    
    <a class="btn btn-primary" href="#/user/login">{{t 'app.returnto'}} {{t 'app.login'}}</a>
  </div>
</div>

<div class="forgot-container">
  <div class="forgot-introduction">{{t 'app.forgotpasswordblurb'}}
  </div>
  <div class="forgot-form">
    <form class="forgot-password-form">
      <i class="validation-message error fa fa-close display-none"></i>
      <div class="forgot-login">
          <input autocomplete="off" placeholder="{{t 'app.usernameoremail'}}" class="input-username-email" tabindex="1">
      </div>
     
      <button class="cancel btn btn-primary-hollow">{{t 'app.cancel'}}</button> 
      <button type="submit" class="submit btn btn-primary">{{t 'app.continue'}}</button>
    </form>
  </div>

  <div class="forgot-footer">
    <strong>{{t 'app.hasyouremailchanged'}}</strong> {{t 'app.forgotpasswordfooter'}}
  </div>
</div>