<div class="login-inner">

    <div class="login-logo">
        <img src="adaptbuilder/css/assets/adapt-learning-logo.png"/>
    </div>

    {{#if isAuthenticated}}
    <h3>{{t 'app.alreadyloggedin'}}<a id="linkDash" href="/#dashboard">{{t 'app.dashboard'}}</a></h3>
    {{else}}
    <form class="login-form">

        <div class="login-new-user col-1-2">
            <div class="login-new-user-inner">

                <h2 class="login-title login-form-row">
                    {{t 'app.newuser'}}
                </h2>

                <div class="login-body login-form-row">
                    {{t 'app.createnewaccount'}}
                </div>

                <a class="btn">{{t 'app.createnewaccountbutton'}}</a>

            </div>
        </div>

        <div class="login-returning-user col-2-2">
            <div class="login-returning-user-inner">

                <h2 class="login-title login-form-row">
                    {{t 'app.returninguser'}}
                </h2>

                <div class="login-body login-form-row">
                    {{t 'app.pleaseloginor'}}&nbsp;
                    <a class="login-forgot-password" href="#user/forgot">{{t 'app.forgotpassword'}}</a>
                </div>

                <span id="loginErrorMessage" class="error"></span>

                <div class="login-username login-form-row">
                    <label for="login-input-username">
                        {{t 'app.usernameoremail'}}:
                    </label>
                    <input type="text" id="login-input-username" tabindex="1" autocomplete="off"/>
                </div>

                <div class="login-password">
                    <label for="login-input-password">
                        {{t 'app.password'}}:
                    </label>
                    <input type="password" id="login-input-password" tabindex="2">
                </div>

                <div class="login-remember-me login-form-row">
                    <input id="remember-me" type="checkbox"/> 
                    <label>
                        {{t 'app.rememberme'}}
                    </label>
                </div>

                <button type="submit" class="btn btn-green login-form-submit" tabindex="3">{{t 'app.login'}}</button>

            </div>
        </div>

    </form>
    {{/if}}

</div>