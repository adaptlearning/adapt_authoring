<div class="sidebar-item-inner">
  <div class="editor-common-sidebar-preview-wrapper">
    <button class="editor-common-sidebar-preview action-primary">
      <span class="editor-common-sidebar-preview-inner">{{ t 'app.preview'}}</span>
      <span class="editor-common-sidebar-previewing display-none">
        <i class="fa fa-circle-o-notch fa-spin"></i>{{ t 'app.previewing'}}
      </span>
    </button>
    <div class="dropdown">
      <button class=""><i class="fa fa-caret-down"></i></button>
      <ul>
        <li>
          <button class="editor-common-sidebar-preview-force">{{ t 'app.forcerebuild'}}</button>
        </li>
      </ul>
    </div>
  </div>

  <button class="editor-common-sidebar-download action-secondary">
    <span class="editor-common-sidebar-download-inner">{{ t 'app.download'}}</span>
    <span class="editor-common-sidebar-downloading display-none">
      <i class="fa fa-circle-o-notch fa-spin"></i>{{ t 'app.downloading'}}
    </span>
  </button>

  <button class="editor-common-sidebar-publish action-secondary">
    <span class="editor-common-sidebar-publish-inner">{{ t 'app.publish'}}</span>
    <span class="editor-common-sidebar-publishing display-none">
      <i class="fa fa-circle-o-notch fa-spin"></i>{{ t 'app.publishing'}}
    </span>
  </button>

  {{#ifHasPermissions "*/*:create,*/*:read,*/*:update,*/*:delete"}}
  <button class="editor-common-sidebar-export action-secondary">
    <span class="editor-common-sidebar-export-inner">{{ t 'app.export'}}</span>
    <span class="editor-common-sidebar-exporting display-none">
      <i class="fa fa-circle-o-notch fa-spin"></i>{{ t 'app.exporting'}}
    </span>
  </button>
  {{/ifHasPermissions}}

  <div class="separator" />

  <div class="sidebar-row">
    <button class="editor-common-sidebar-project">
      <span class="editor-common-sidebar-project-inner">
        <i class="fa fa-chevron-right primary-color"/>{{ t 'app.editorsettings'}}
      </span>
    </button>
  </div>

  <div class="sidebar-row">
    <button class="editor-common-sidebar-config">
      <span class="editor-common-sidebar-config-inner">
        <i class="fa fa-chevron-right primary-color"/>{{ t 'app.editorconfig'}}
      </span>
    </button>
  </div>

  <div class="sidebar-row">
    <button class="editor-common-sidebar-select-theme">
      <span class="editor-common-sidebar-select-theme-inner">
        <i class="fa fa-chevron-right primary-color"/></i>{{ t 'app.editorselecttheme'}}
      </span>
    </button>
  </div>

  <div class="sidebar-row">
    <button class="editor-common-sidebar-menusettings">
      <span class="editor-common-sidebar-menusettings-inner">
        <i class="fa fa-chevron-right primary-color"/></i>{{ t 'app.editormenusettings'}}
      </span>
    </button>
  </div>

  <div class="sidebar-row">
    <button class="editor-common-sidebar-extensions">
      <span class="editor-common-sidebar-extensions-inner">
        <i class="fa fa-chevron-right primary-color"/></i>{{ t 'app.editorextensions'}}
      </span>
    </button>
  </div>

  <form id="downloadForm" method="get" action=""></form>
</div>
