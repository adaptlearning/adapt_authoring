<div class="login-inner">
  {{! <div class="login-logo"></div> }}

  <div class="login-header">
    <h1 class="login-header-title">Welcome to Knowy Authoring tool</h1>
    <p class="login-header-subtitle">This portal provides access to our HTML5
      authoring tool, which is part of our CMS ecosystem. If you have admin
      access to our CMS, you won't need to log in separately to this authoring
      tool. Instead, you can enjoy seamless Single Sign-On access directly from
      our CMS.</p>
  </div>

  <form class="login-form" autocomplete="off">
    {{!-- <div class="login-title">{{t "app.signin"}}</div> --}}
    {{#if isAuthenticated}}
      {{t "app.alreadyloggedin"}}
      <button class="dash btn small secondary">{{t
          "app.gotodashboard"
        }}</button>
    {{else}}
      <div class="login-fields">
        <div id="loginError" class="display-none">
          <i class="fa fa-times"></i><span id="loginErrorMessage" />
        </div>
        <input
          type="email"
          autocomplete="off"
          class="login-input-username"
          value=""
          id="login-input-username"
          placeholder="Your account here (normally itâ€™s your School Email)"
          tabindex="1"
        />
        <input
          type="password"
          autocomplete="off"
          class="login-input-password"
          value=""
          id="login-input-password"
          placeholder="Your password here "
          tabindex="2"
        />
        <button
          type="submit"
          class="btn secondary login-form-submit"
          tabindex="3"
        >{{t "app.login"}}</button>
      </div>
      {{!-- <div class="login-remember-me">
        <input
          id="remember-me"
          class="remember-me-checkbox"
          name="remember-me"
          type="checkbox"
        />
        <label for="remember-me" class="remember-me-label">{{t
            "app.rememberme"
          }}</label>
      </div> --}}
      {{#ifMailEnabled}}
        <div class="login-forgot-password">
          <a class="" href="#user/forgot">{{t "app.forgotpassword"}}</a>
        </div>
      {{/ifMailEnabled}}
    {{/if}}
  </form>
</div>
