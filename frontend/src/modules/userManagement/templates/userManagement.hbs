<div class="container">
    <div class="inner">
        <div class="tb-heading col-row tb-row">
            <div class="col-25">
              <button data-sort="email" class="active sort sort-down">
                <h4 class="tb-col-inner">{{t 'app.usernameoremail'}}</h4>
                <i class="fa"></i>
              </button>
            </div>
            <div class="col-15">
              <button data-sort="tenantName" class="sort sort-down">
                <h4 class="tb-col-inner">{{t 'app.tenant'}}</h4>
                <i class="fa"></i>
              </button>
            </div>
            <div class="col-15">
              <button data-sort="roleNames" class="sort sort-down">
                <h4 class="tb-col-inner">{{t 'app.role'}}</h4>
                <i class="fa"></i>
              </button>
            </div>
            <div class="col-15 col-centered">
              <button data-sort="failedLoginCount" class="sort sort-down">
                <h4 class="tb-col-inner">{{t 'app.failedlogins'}}</h4>
                <i class="fa"></i>
              </button>
            </div>
            <div class="col-15 col-centered">
              <button data-sort="lastAccess" class="sort sort-down">
                <h4 class="tb-col-inner">{{t 'app.lastaccess'}}</h4>
                <i class="fa"></i>
              </button>
            </div>
            <div class="col-15">
            </div>
        </div>
        <ul class="users clearfix grid-layout">
            {{!-- Users get rendered in here --}}
        </ul>

        <div class="action-buttons">
            <button class="btn tertiary-hollow refresh-all">{{t 'app.refresh'}}</button>
        </div>
    </div>
</div>
