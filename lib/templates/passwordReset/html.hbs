<!doctype html>
<html>
  <head>
    <meta name="viewport" content="width=device-width">
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <title>{{subject}}</title>
  </head>
  <body>
    <div class="logo">
      <div class="logo-main">{{logoText}}</div>
      <div class="logo-sub">{{logoSubtext}}</div>
    </div>
    <div class="content">
      <div class="title">
        {{subject}}
      </div>
      <p>{{greeting}}</p>
      {{{text}}}
      <a class="btn" href="{{{templateData.rootUrl}}}#user/{{{templateData.type}}}/{{{templateData.token}}}" target="_blank"">{{templateData.buttonLabel}}</a>
    </div>
    <div class="footer">
      {{footer}}
    </div>
  </body>
</html>
